<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.android.opp.activities.LoginActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            />
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/border_edit_text"
            android:hint="Correo electrónico"
            android:layout_marginTop="32dp"
            android:id="@+id/login_text"
            android:inputType="textEmailAddress"
            android:fontFamily="sans-serif-light"
            android:layout_height="50dp" />
        <EditText
            android:layout_width="match_parent"
            android:hint="Contraseña"
            android:background="@drawable/border_edit_text"
            android:layout_marginTop="16dp"
            android:inputType="textPassword"
            android:id="@+id/edit_text_password_login"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentLeft="true"

            android:layout_height="50dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_black"
            android:text="Iniciar Sesión"
            android:id="@+id/button_login_email"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorGrayEdit"
            ></LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/facebook_blue"
            android:textColor="@color/white"
            android:id="@+id/button_register_facebook"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            android:text="Iniciar sesión con Facebook"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/register_container"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorGrayEdit"
            ></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="16dp"

            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿No tienes una cuenta? "
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrate"
                    android:fontFamily="sans-serif-medium"
                    />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>

</android.support.constraint.ConstraintLayout>
