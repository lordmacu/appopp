<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:infiniteCard="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_swipe"

    tools:context="com.android.opp.activities.IndividualActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/text_individual"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <com.bakerj.infinitecards.InfiniteCardView
        android:id="@+id/view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        infiniteCard:animDuration="1000"
        infiniteCard:cardRatio="1"/>


    <com.scottyab.HeartBeatView
        android:id="@+id/heartbeat"
        android:layout_alignParentBottom="true"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
