<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:ms_stepperType="progress_bar"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.stepstone.stepper.StepperLayout
        android:id="@+id/stepperLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ms_stepperType="tabs"
        app:ms_completeButtonBackground="@color/green"
        app:ms_completeButtonColor="@color/white"
        app:ms_backButtonColor="@color/white"
        app:ms_nextButtonColor="@color/white"
        app:ms_completeButtonText="  Completar  "
        app:ms_bottomNavigationBackground="@color/colorPrimary"
        app:ms_activeStepColor="@color/colorPrimary"

        />

</RelativeLayout>