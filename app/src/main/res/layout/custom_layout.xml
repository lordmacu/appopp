<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/button1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <com.github.zagum.switchicon.SwitchIconView
                    android:id="@+id/switchIconView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    app:si_disabled_alpha=".5"
                    app:si_disabled_color="#dadada"
                    app:si_enabled="false"
                    app:si_tint_color="#3498db"
                    app:srcCompat="@drawable/zzz_human_male"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hombres"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:background="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <com.github.zagum.switchicon.SwitchIconView
                    android:id="@+id/switchIconView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    app:si_disabled_alpha=".5"
                    app:si_disabled_color="#dadada"
                    app:si_enabled="false"
                    app:si_tint_color="#F62459"
                    app:srcCompat="@drawable/zzz_human_female"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mujeres"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button3"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:background="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <com.github.zagum.switchicon.SwitchIconView
                    android:id="@+id/switchIconView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    app:si_disabled_alpha=".5"
                    app:si_disabled_color="#dadada"
                    app:si_enabled="false"
                    app:si_tint_color="#e67e22"
                    app:srcCompat="@drawable/zzz_human_male_female"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambos"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>